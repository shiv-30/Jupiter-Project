package com.assessment_details.service;

import org.springframework.beans.factory.annotation.Autowired;

import com.assessment_details.repository.AssessmentRepository;

public class AssessmentService {
	@Autowired
	private AssessmentRepository assessmentRespository;
	
	public List<Assessment> getAllAssessment() {
		return assessmentRepository.findAll();
	}

	public Employee saveOrUpdate(Employee Employee) {
		return EmployeeRepository.save(Employee);
	}

	public Employee getEmployeeById(int empCode) {
		return EmployeeRepository.findById(empCode).get();
	}

	public void delete(int empCode) {
		EmployeeRepository.deleteById(empCode);
	}
}


